<h1>Dashboard Admin </h1>
<%= link_to "Log out", destroy_user_session_path, method: :delete, data: {turbo_method: :delete}  %>
<%= image_tag "ganondorf.jpeg", alt: "ganondorf", width: 100, height: 100%>
<div class="container">
  <div class="d-flex flex-row justify-content-start m-3 bg-light overflow-hidden border">
    <table class="w-100">
      <thead>
        <tr>
          <th class='p-1'>Action</th>
          <th class='p-1'>Short Link</th>
          <th class='p-1'>User</th>
          <th class='p-1'>Original link</th>
        </tr>
      </thead>
      <tbody>
        <% @links.each do |link| %>
          <tr>
            <td class='p-1'><%= link_to "Delete", link_path(link), method: :delete, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></td>
            <td class='p-1'><%= link_to link.short_url, link.destination_url %></td>
            <td class='p-1'><%= link.user.email %></td>
            <td class='p-1'><%= link.destination_url %></td>
          </tr>
        <% end %>
      </tbody>
    </table>


  </div>
</div>
